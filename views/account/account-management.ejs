<!-- A content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- A message -->
<%- messages() %>

<!-- Display any errors. -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div id="update-acc">

  <h2>Welcome, <%= locals.accountData.account_firstname %></h2><br>
  <a href="/account/account-update">Edit Account Information</a>
  <h3>Message Center</h3>
  <ul>
    <li>You have <%= locals.unread %> unread messages.</li>
    <li>Go to <a href='/account/inbox/:<%= locals.accountData.account_id %>'>Inbox</a></li>
  </ul>

<% if (locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") { %>
  <h2>Inventory Management</h2>
  <a href="/inv/">Manage Inventory</a>
<% } %>

</div>