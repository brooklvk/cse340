<!-- A content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- A message -->
<%- messages() %>

<!-- Display any errors. -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div id="update-acc">

<% if (locals.accountData.account_type == "Client") { %>
  <h2>Welcome, <%= locals.accountData.account_firstname %></h2><br>
  <a href="/account/account-update">Edit Account Information</a>
  <h3>Message Center</h3>
  <ul>
    <li>You have () unread messages.</li>
    <li>Go to <a href="/account/inbox">Inbox</a></li>
  </ul>
<% } %>

<% if (locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") { %>
  <h2>Welcome, <%= locals.accountData.account_firstname %></h2>
  <a href="/account/account-update">Edit Account Information</a><br>

  <h2>Message Center</h2>
  <ul>
    <li>You have () unread messages.</li>
    <li>Go to <a href="/account/inbox">Inbox</a></li>
  </ul>

  <h2>Inventory Management</h2>
  <a href="/inv/">Manage Inventory</a>
<% } %>

</div>