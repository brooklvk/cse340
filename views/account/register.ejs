<!-- A content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    
<!-- A message -->
<%- messages() %>

<!-- Display any errors. -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<!-- Form for registration. -->
<form action="/account/register" method="post">
    <fieldset>
        <p>All inputs are required. </p>
        <label>First Name: <input name="account_firstname" id="accountFirstname" type="text" value="<%= locals.account_firstname %>" required></label>
        <label>Last Name: <input name="account_lastname" id="accountLastname" type="text" value="<%= locals.account_lastname %>" required></label>
        <label>Email: <input name="account_email" id="accountEmail" type="email" value="<%= locals.account_email %>" placeholder="example@gmail.com" required></label>
        <small>Password must be at least 12 characters long and include 1 capital letter, 1 number, and 1 special character.</small>
        <label>Password: <input name="account_password" type="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required></label>
        <button type="submit">REGISTER</button>
    </fieldset>
</form>
