<!-- A content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- A message -->
<%- messages() %>

<!-- Display any errors. -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<ul>
    <li><a href='/account/new-message/:<%= locals.accountData.account_id %>'>Create New Message</a></li>
    <li><a href='/account/archive/:<%= locals.accountData.account_id %>'>View <%= locals.numArchived %> Archived Messages</a></li>
</ul>

<%- table %>