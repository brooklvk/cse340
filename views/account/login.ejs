<!-- A content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    
<!-- A message -->
<%- messages() %>

<!-- Display any errors. -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Form for login and link to registration. -->
<form id="loginForm" action="/account/login" method="post">
  <fieldset>
    <label>Email: <input name="account_email" type="email" placeholder="example@gmail.com" required></label>
    <label>Password: <input name="account_password" type="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required></label>
    <button type="submit">LOGIN</button>
  </fieldset>
</form>

<p>No account? <a href="register">Sign Up</a></p>